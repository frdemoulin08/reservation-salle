{% extends 'admin/_layout.html.twig' %}

{% block title %}Détail du type de document{% endblock %}

{% set active_menu = 'document_types' %}
{% set page_heading = 'Détail du type de document' %}

{% block admin_breadcrumb %}
    <div class="mb-4">
        {% include 'admin/site_document_types/_breadcrumb.html.twig' with { current_label: page_heading } %}
    </div>
{% endblock %}

{% block admin_content %}
    <div class="mb-8 flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between">
        <div>
            <p class="text-xs font-semibold uppercase tracking-[0.18em] text-brand">Paramétrage</p>
            <h1 class="mt-3 text-3xl font-semibold text-heading">{{ page_heading }}</h1>
            <p class="mt-2 max-w-2xl text-sm text-body">Fiche détaillée du type de document.</p>
        </div>
        <div class="flex flex-wrap gap-3">
            {{ include('components/_button.html.twig', {
                label: 'Éditer',
                href: path('app_admin_site_document_types_edit', { id: document_type.id }),
                variant: 'warning',
                size: 'sm'
            }) }}
            {{ include('components/_button.html.twig', {
                label: 'Retour à la liste',
                href: path('app_admin_site_document_types_index'),
                variant: 'tertiary',
                size: 'sm'
            }) }}
        </div>
    </div>

    <section class="rounded-2xl border border-default bg-neutral-primary-soft p-6 shadow-xs">
        <dl class="grid gap-4 sm:grid-cols-2">
            <div>
                <dt class="text-xs font-semibold uppercase tracking-[0.12em] text-body">Libellé</dt>
                <dd class="mt-2 text-base font-semibold text-heading">{{ document_type.label }}</dd>
            </div>
            <div>
                <dt class="text-xs font-semibold uppercase tracking-[0.12em] text-body">Code</dt>
                <dd class="mt-2 text-base text-heading">{{ document_type.code }}</dd>
            </div>
            <div class="sm:col-span-2">
                <dt class="text-xs font-semibold uppercase tracking-[0.12em] text-body">Description</dt>
                <dd class="mt-2 text-base text-heading whitespace-pre-line">{{ document_type.description ?? '—' }}</dd>
            </div>
            <div>
                <dt class="text-xs font-semibold uppercase tracking-[0.12em] text-body">Visibilité</dt>
                <dd class="mt-2 text-base text-heading">{{ document_type.isPublic ? 'Public' : 'Privé' }}</dd>
            </div>
            <div>
                <dt class="text-xs font-semibold uppercase tracking-[0.12em] text-body">Obligatoire</dt>
                <dd class="mt-2 text-base text-heading">{{ document_type.isRequired ? 'Oui' : 'Non' }}</dd>
            </div>
            <div>
                <dt class="text-xs font-semibold uppercase tracking-[0.12em] text-body">Multiple autorisé</dt>
                <dd class="mt-2 text-base text-heading">{{ document_type.isMultipleAllowed ? 'Oui' : 'Non' }}</dd>
            </div>
            <div>
                <dt class="text-xs font-semibold uppercase tracking-[0.12em] text-body">Actif</dt>
                <dd class="mt-2 text-base text-heading">{{ document_type.isActive ? 'Actif' : 'Inactif' }}</dd>
            </div>
            <div>
                <dt class="text-xs font-semibold uppercase tracking-[0.12em] text-body">Position</dt>
                <dd class="mt-2 text-base text-heading">{{ document_type.position }}</dd>
            </div>
        </dl>
    </section>
{% endblock %}
