{% extends 'admin/_layout.html.twig' %}

{% block title %}Détail du type d’événement{% endblock %}

{% set active_menu = 'types_evenement' %}
{% set page_heading = event_type.label %}

{% block admin_breadcrumb %}
    <div class="mb-4">
        {% include 'admin/event_types/_breadcrumb.html.twig' with { current_label: page_heading } %}
    </div>
{% endblock %}

{% block admin_content %}
    <div class="mb-8 flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between">
        <div>
            <p class="text-xs font-semibold uppercase tracking-[0.18em] text-brand">Paramétrage</p>
            <h1 class="mt-3 text-3xl font-semibold text-heading">{{ page_heading }}</h1>
            <p class="mt-2 max-w-2xl text-sm text-body">Fiche détaillée du type d’événement.</p>
        </div>
        <div class="flex flex-wrap gap-3">
            {{ include('components/_button.html.twig', {
                label: 'Éditer',
                href: path('app_admin_event_types_edit', { id: event_type.id }),
                variant: 'warning',
                size: 'sm'
            }) }}
            {{ include('components/_button.html.twig', {
                label: 'Retour à la liste',
                href: path('app_admin_event_types_index'),
                variant: 'tertiary',
                size: 'sm'
            }) }}
        </div>
    </div>

    <section class="rounded-2xl border border-default bg-neutral-primary-soft p-6 shadow-xs">
        <dl class="grid gap-4 sm:grid-cols-2">
            <div>
                <dt class="text-xs font-semibold uppercase tracking-[0.12em] text-body">Libellé</dt>
                <dd class="mt-2 text-base font-semibold text-heading">{{ event_type.label }}</dd>
            </div>
            <div>
                <dt class="text-xs font-semibold uppercase tracking-[0.12em] text-body">Code</dt>
                <dd class="mt-2 text-base text-heading">{{ event_type.code }}</dd>
            </div>
            <div>
                <dt class="text-xs font-semibold uppercase tracking-[0.12em] text-body">Réservations associées</dt>
                <dd class="mt-2 text-base text-heading">{{ event_type.reservations|length }}</dd>
            </div>
        </dl>
    </section>
{% endblock %}
