{% extends 'admin/_layout.html.twig' %}

{% block title %}Détail de l’usager{% endblock %}

{% set active_menu = 'usagers' %}
{% set page_heading = 'Détail de l’usager' %}

{% block admin_breadcrumb %}
    <div class="mb-4">
        {% include 'admin/usagers/_breadcrumb.html.twig' with { current_label: page_heading } %}
    </div>
{% endblock %}

{% block admin_content %}
    <div class="mb-8 flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between">
        <div>
            <p class="text-xs font-semibold uppercase tracking-[0.18em] text-brand">Gestion</p>
            <h1 class="mt-3 text-3xl font-semibold text-heading">{{ page_heading }}</h1>
            <p class="mt-2 max-w-2xl text-sm text-body">Fiche détaillée de l’usager.</p>
        </div>
        <div class="flex flex-wrap gap-3">
            {{ include('components/_button.html.twig', {
                label: 'Retour à la liste',
                href: path('app_admin_usagers_index'),
                variant: 'tertiary',
                size: 'sm'
            }) }}
        </div>
    </div>

    <section class="rounded-2xl border border-default bg-neutral-primary-soft p-6 shadow-xs">
        {% set role_labels = [] %}
        {% for role_code in user.roles %}
            {% if role_code != 'ROLE_USER' %}
                {% set translated = ('roles.' ~ role_code)|trans %}
                {% set label = translated starts with 'roles.' ? role_code : translated %}
                {% set role_labels = role_labels|merge([label]) %}
            {% endif %}
        {% endfor %}

        <dl class="grid gap-4 sm:grid-cols-2">
            <div>
                <dt class="text-xs font-semibold uppercase tracking-[0.12em] text-body">Nom</dt>
                <dd class="mt-2 text-base text-heading">{{ user.lastname|upper }}</dd>
            </div>
            <div>
                <dt class="text-xs font-semibold uppercase tracking-[0.12em] text-body">Prénom</dt>
                <dd class="mt-2 text-base text-heading">{{ user.firstname }}</dd>
            </div>
            <div>
                <dt class="text-xs font-semibold uppercase tracking-[0.12em] text-body">Email</dt>
                <dd class="mt-2 text-base text-heading">{{ user.email }}</dd>
            </div>
            <div>
                <dt class="text-xs font-semibold uppercase tracking-[0.12em] text-body">Statut</dt>
                <dd class="mt-2 text-base text-heading">{{ user.isActive ? 'Actif' : 'Inactif' }}</dd>
            </div>
            <div>
                <dt class="text-xs font-semibold uppercase tracking-[0.12em] text-body">Téléphone mobile</dt>
                <dd class="mt-2 text-base text-heading">{{ user.mobilePhone ?? '—' }}</dd>
            </div>
            <div>
                <dt class="text-xs font-semibold uppercase tracking-[0.12em] text-body">Téléphone fixe</dt>
                <dd class="mt-2 text-base text-heading">{{ user.fixedPhone ?? '—' }}</dd>
            </div>
            <div>
                <dt class="text-xs font-semibold uppercase tracking-[0.12em] text-body">Rôles</dt>
                <dd class="mt-2 text-base text-heading">
                    {{ role_labels is empty ? '—' : role_labels|join(', ') }}
                </dd>
            </div>
            <div>
                <dt class="text-xs font-semibold uppercase tracking-[0.12em] text-body">Dernière mise à jour</dt>
                <dd class="mt-2 text-base text-heading">{{ user.updatedAt|date('d/m/Y \\à H:i:s') }}</dd>
            </div>
            <div>
                <dt class="text-xs font-semibold uppercase tracking-[0.12em] text-body">Créé le</dt>
                <dd class="mt-2 text-base text-heading">{{ user.createdAt|date('d/m/Y \\à H:i:s') }}</dd>
            </div>
        </dl>
    </section>

    {% set organization_type_labels = {
        'ASSOCIATION': 'Association',
        'ENTREPRISE': 'Entreprise',
        'COLLECTIVITE': 'Collectivité',
        'CD08_SERVICE': 'Conseil départemental des Ardennes',
        'AUTRE': 'Autre'
    } %}
    <section class="mt-6 rounded-2xl border border-default bg-neutral-primary-soft p-6 shadow-xs">
        <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
            <div>
                <h2 class="text-sm font-semibold uppercase tracking-[0.18em] text-body">Organisation</h2>
                <p class="mt-1 text-sm text-body-subtle">Organisation rattachée à l’usager.</p>
            </div>
            {% if user.organization %}
                <div class="flex flex-wrap gap-2">
                    {{ include('components/_button.html.twig', {
                        label: 'Voir l\'organisation',
                        href: path('app_admin_organizations_show', { id: user.organization.id }),
                        variant: 'tertiary',
                        size: 'sm'
                    }) }}
                </div>
            {% endif %}
        </div>
        {% if user.organization %}
            <dl class="mt-4 grid gap-4 sm:grid-cols-3">
                <div>
                    <dt class="text-xs font-semibold uppercase tracking-[0.12em] text-body">Nom</dt>
                    <dd class="mt-2 text-base text-heading">
                        {{ user.organization.displayName ?: user.organization.legalName }}
                    </dd>
                </div>
                <div>
                    <dt class="text-xs font-semibold uppercase tracking-[0.12em] text-body">Type</dt>
                    {% set organization_type = user.organization.organizationType ?? null %}
                    <dd class="mt-2 text-base text-heading">
                        {{ organization_type_labels[organization_type] ?? organization_type ?? '—' }}
                    </dd>
                </div>
                <div>
                    <dt class="text-xs font-semibold uppercase tracking-[0.12em] text-body">SIRET</dt>
                    <dd class="mt-2 text-base text-heading">{{ user.organization.siret ?? '—' }}</dd>
                </div>
            </dl>
        {% else %}
            <div class="mt-3">
                <span class="inline-flex items-center rounded-full bg-neutral-secondary-soft px-3 py-1 text-xs font-semibold text-body">
                    Aucune organisation rattachée
                </span>
            </div>
        {% endif %}
    </section>
{% endblock %}
