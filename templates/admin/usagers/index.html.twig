{% extends 'admin/_layout.html.twig' %}

{% block title %}Usagers{% endblock %}

{% set active_menu = 'usagers' %}
{% set page_heading = 'Usagers' %}

{% block admin_breadcrumb %}
    <div class="mb-4">
        {% include 'admin/usagers/_breadcrumb.html.twig' %}
    </div>
{% endblock %}

{% block admin_content %}
    <div class="mb-8 flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between">
        <div>
            <p class="text-xs font-semibold uppercase tracking-[0.18em] text-brand">Gestion</p>
            <h1 class="mt-3 text-3xl font-semibold text-heading">{{ page_heading }}</h1>
            <p class="mt-2 max-w-2xl text-sm text-body">Liste des usagers (comptes sans rôles d’administration).</p>
        </div>
    </div>

    <section class="rounded-2xl border border-default bg-neutral-primary-soft p-5 shadow-xs">
        {{ include('components/_table_header.html.twig', {
            route: 'app_admin_usagers_index',
            params: params,
            target: 'usagers',
            search_id: 'usagers-search',
            search_placeholder: 'Rechercher un usager, un email, une organisation ou un identifiant',
            search_value: params.filters.q ?? '',
            actions: [
                {
                    label: 'Ajouter un usager',
                    variant: 'primary',
                    href: path('app_admin_usagers_new'),
                    size: 'sm',
                    extra_class: 'flex items-center justify-center',
                    icon: '<svg class="mr-2 h-3.5 w-3.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true"><path fill-rule="evenodd" clip-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" /></svg>'
                }
            ]
        }) }}
        <div id="usagers-table-container" data-table-ajax="usagers">
            {% include 'admin/usagers/_table.html.twig' with { pager: pager, params: params } %}
        </div>
    </section>
{% endblock %}
