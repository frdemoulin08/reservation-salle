{% extends 'admin/_layout.html.twig' %}

{% block title %}Ajouter une organisation{% endblock %}

{% set active_menu = 'organisations' %}
{% set page_heading = 'Ajouter une organisation' %}

{% block admin_breadcrumb %}
    <div class="mb-4">
        {% include 'admin/organizations/_breadcrumb.html.twig' with { current_label: page_heading } %}
    </div>
{% endblock %}

{% block admin_content %}
    <div class="mb-8 flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between">
        <div>
            <p class="text-xs font-semibold uppercase tracking-[0.18em] text-brand">Gestion</p>
            <h1 class="mt-3 text-3xl font-semibold text-heading">{{ page_heading }}</h1>
            <p class="mt-2 max-w-2xl text-sm text-body">Création manuelle d’une organisation, utile en complément de la saisie par l’usager.</p>
        </div>
        <div class="flex flex-wrap gap-3">
            {{ include('components/_button.html.twig', {
                label: 'Retour à la liste',
                href: path('app_admin_organizations_index'),
                variant: 'tertiary',
                size: 'sm'
            }) }}
        </div>
    </div>

    <section class="rounded-2xl border border-default bg-neutral-primary-soft p-6 shadow-xs">
        {{ form_start(form, { attr: { class: 'grid gap-6 md:grid-cols-2', novalidate: 'novalidate', 'data-validate-form': 'true' } }) }}
            <div class="md:col-span-2">
                <p class="text-xs font-semibold uppercase tracking-[0.18em] text-body">Structure</p>
            </div>
            {{ include('components/_form_field.html.twig', { field: form.headOfficeAddressCountry }) }}
            {{ include('components/_form_field.html.twig', { field: form.organizationType }) }}
            <div class="md:col-span-2 flex items-center" data-association-registered-field>
                {{ form_widget(form.associationRegistered, { attr: { class: 'w-4 h-4 border border-default-medium rounded-xs bg-neutral-secondary-medium focus:ring-2 focus:ring-brand-soft' } }) }}
                {{ form_label(form.associationRegistered, null, { label_attr: { class: 'select-none ms-2 text-sm font-medium text-heading' } }) }}
                {{ form_errors(form.associationRegistered) }}
            </div>
            {{ include('admin/organizations/_siret_field.html.twig', { form: form }) }}
            {{ include('components/_form_field.html.twig', { field: form.legalName, wrapper_class: 'md:col-span-2' }) }}
            {{ include('components/_form_field.html.twig', { field: form.displayName, wrapper_class: 'md:col-span-2' }) }}
            <div class="md:col-span-2 mt-2">
                <p class="text-xs font-semibold uppercase tracking-[0.18em] text-body">Adresse</p>
            </div>
            {{ include('components/_form_field.html.twig', { field: form.headOfficeAddressLine1, wrapper_class: 'md:col-span-1' }) }}
            {{ include('components/_form_field.html.twig', { field: form.headOfficeAddressLine2, wrapper_class: 'md:col-span-1' }) }}
            {{ include('components/_form_field.html.twig', { field: form.headOfficeAddressLine3, wrapper_class: 'md:col-span-1' }) }}
            {{ include('components/_form_field.html.twig', { field: form.headOfficeAddressPostalCode, wrapper_class: 'md:col-span-1' }) }}
            {{ include('components/_form_field.html.twig', { field: form.headOfficeAddressCity, wrapper_class: 'md:col-span-1' }) }}
            <div class="md:col-span-2 mt-2">
                <p class="text-xs font-semibold uppercase tracking-[0.18em] text-body">Champs complémentaires</p>
            </div>
            {{ include('components/_form_field.html.twig', { field: form.legalNature, wrapper_class: 'md:col-span-2' }) }}
            <div class="md:col-span-2 flex items-center">
                {{ form_widget(form.billingSameAsHeadOffice, { attr: { class: 'w-4 h-4 border border-default-medium rounded-xs bg-neutral-secondary-medium focus:ring-2 focus:ring-brand-soft' } }) }}
                {{ form_label(form.billingSameAsHeadOffice, null, { label_attr: { class: 'select-none ms-2 text-sm font-medium text-heading' } }) }}
                {{ form_errors(form.billingSameAsHeadOffice) }}
            </div>
            <div class="md:col-span-2 mt-2">
                <p class="text-xs font-semibold uppercase tracking-[0.18em] text-body">Facturation</p>
            </div>
            {{ include('components/_form_field.html.twig', { field: form.billingAddressCountry }) }}
            {{ include('components/_form_field.html.twig', { field: form.billingAddressPostalCode }) }}
            {{ include('components/_form_field.html.twig', { field: form.billingAddressCity }) }}
            {{ include('components/_form_field.html.twig', { field: form.billingAddressLine1, wrapper_class: 'md:col-span-2' }) }}
            {{ include('components/_form_field.html.twig', { field: form.billingAddressLine2, wrapper_class: 'md:col-span-2' }) }}
            {{ include('components/_form_field.html.twig', { field: form.billingAddressLine3, wrapper_class: 'md:col-span-2' }) }}
            <div class="md:col-span-2 flex items-center justify-end gap-3">
                {{ include('components/_button.html.twig', {
                    label: 'Annuler',
                    href: path('app_admin_organizations_index'),
                    variant: 'tertiary',
                    size: 'sm'
                }) }}
                {{ include('components/_button.html.twig', {
                    label: 'Créer l\'organisation',
                    variant: 'primary',
                    size: 'sm',
                    type: 'submit',
                    extra_class: 'min-w-[170px]'
                }) }}
            </div>
        {{ form_end(form) }}
    </section>
{% endblock %}
