{% set columns = [
    { label: 'Organisation', sort: 'displayName' },
    { label: 'SIRET', sort: 'siret' },
    { label: 'Type', sort: 'organizationType' },
    { label: 'Ville' },
    { label: 'Mise à jour', sort: 'updatedAt' },
    { label: 'Actions' }
] %}

<div class="relative overflow-visible rounded-base border border-default bg-neutral-primary-soft shadow-xs">
    <div class="overflow-x-auto overflow-y-visible">
        <table class="w-full text-left text-sm text-body">
            {% include '_partials/table/_header.html.twig' with {
                route: 'app_admin_organizations_index',
                params: params,
                columns: columns
            } %}
            <tbody class="divide-y divide-neutral-secondary-soft bg-neutral-primary">
                {% for organization in pager %}
                    {% set display_name = organization.displayName ?: organization.legalName %}
                    <tr class="border-b border-default bg-neutral-primary-soft hover:bg-neutral-secondary-medium cursor-pointer" data-row-link="{{ path('app_admin_organizations_show', { id: organization.id }) }}">
                        <th scope="row" class="px-6 py-4 font-semibold text-heading whitespace-nowrap">
                            {{ display_name }}
                        </th>
                        <td class="px-6 py-4">{{ organization.siret ?? '—' }}</td>
                        <td class="px-6 py-4">{{ organization.organizationType ?? '—' }}</td>
                        <td class="px-6 py-4">
                            {% if organization.headOfficeAddress and organization.headOfficeAddress.city %}
                                {{ organization.headOfficeAddress.city }}
                            {% else %}
                                —
                            {% endif %}
                        </td>
                        <td class="px-6 py-4">{{ organization.updatedAt|date('d/m/Y') }}</td>
                        <td class="px-6 py-4 text-center">
                            {{ include('components/_actions_dropdown.html.twig', {
                                id: 'organization-actions-' ~ organization.id,
                                items: [
                                    { label: 'Voir', href: path('app_admin_organizations_show', { id: organization.id }) },
                                    { label: 'Éditer', href: path('app_admin_organizations_edit', { id: organization.id }) },
                                    {
                                        label: 'Supprimer',
                                        href: '#',
                                        extra_class: 'text-fg-danger font-medium',
                                        data_attrs: {
                                            'data-modal-target': 'organization-delete-modal',
                                            'data-modal-toggle': 'organization-delete-modal',
                                            'data-delete-url': path('app_admin_organizations_delete', { id: organization.id }),
                                            'data-delete-name': display_name
                                        }
                                    }
                                ]
                            }) }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td class="px-6 py-6 text-center text-sm text-body-subtle" colspan="{{ columns|length }}">Aucune organisation ne correspond à votre recherche.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% include '_partials/table/_pagination.html.twig' with { route: 'app_admin_organizations_index', params: params, pager: pager } %}
