{#
params:
- field (FormView)
#}
<div class="flex items-center gap-2">
    {{ form_widget(field, { attr: { class: 'w-4 h-4 border border-default-medium rounded-xs bg-neutral-secondary-medium focus:ring-2 focus:ring-brand-soft' } }) }}
    {{ form_label(field, null, { label_attr: { class: 'select-none text-sm font-medium text-heading' } }) }}
    {{ form_errors(field) }}
</div>
