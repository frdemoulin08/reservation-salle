{% set columns = [
    { label: 'Nom', sort: 'lastName' },
    { label: 'Rôle', sort: 'role' },
    { label: 'Email', sort: 'email' },
    { label: 'Téléphone' },
    { label: 'Actions' }
] %}

{% set role_labels = {
    'REQUESTER': 'Demandeur',
    'PAYER': 'Payeur',
    'CONTACT': 'Contact',
    'OTHER': 'Autre'
} %}

<div class="relative overflow-visible rounded-base border border-default bg-neutral-primary-soft shadow-xs">
    <div class="overflow-x-auto overflow-y-visible">
        <table class="w-full text-left text-sm text-body">
            {% include '_partials/table/_header.html.twig' with {
                route: 'app_admin_organization_contacts_index',
                params: params,
                columns: columns,
                route_params: { organizationId: organization.id }
            } %}
            <tbody class="divide-y divide-neutral-secondary-soft bg-neutral-primary">
                {% for contact in pager %}
                    <tr class="border-b border-default bg-neutral-primary-soft hover:bg-neutral-secondary-medium cursor-pointer" data-row-link="{{ path('app_admin_organization_contacts_show', { organizationId: organization.id, id: contact.id }) }}">
                        <th scope="row" class="px-6 py-4 font-semibold text-heading whitespace-nowrap">
                            {{ contact.lastName|upper }} {{ contact.firstName }}
                        </th>
                        <td class="px-6 py-4">{{ role_labels[contact.role] ?? (contact.role ?? '—') }}</td>
                        <td class="px-6 py-4">{{ contact.email }}</td>
                        <td class="px-6 py-4">{{ contact.phone ?? '—' }}</td>
                        <td class="px-6 py-4 text-center">
                            {{ include('components/_actions_dropdown.html.twig', {
                                id: 'organization-contact-actions-' ~ contact.id,
                                items: [
                                    { label: 'Voir', href: path('app_admin_organization_contacts_show', { organizationId: organization.id, id: contact.id }) },
                                    { label: 'Éditer', href: path('app_admin_organization_contacts_edit', { organizationId: organization.id, id: contact.id }) },
                                    {
                                        label: 'Supprimer',
                                        href: '#',
                                        extra_class: 'text-fg-danger font-medium',
                                        data_attrs: {
                                            'data-modal-target': 'organization-contact-delete-modal',
                                            'data-modal-toggle': 'organization-contact-delete-modal',
                                            'data-delete-url': path('app_admin_organization_contacts_delete', { organizationId: organization.id, id: contact.id }),
                                            'data-delete-name': contact.firstName ~ ' ' ~ contact.lastName
                                        }
                                    }
                                ]
                            }) }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td class="px-6 py-6 text-center text-sm text-body-subtle" colspan="{{ columns|length }}">Aucun contact ne correspond à votre recherche.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% include '_partials/table/_pagination.html.twig' with { route: 'app_admin_organization_contacts_index', params: params, pager: pager, route_params: { organizationId: organization.id } } %}
